# Standard headers
HEADERS_AUTH = {"Content-Type": "application/x-www-form-urlencoded"}
HEADERS = {"Content-Type": "application/json"}

CLIENT_ID = os.getenv("WIZ_CLIENT_ID")
CLIENT_SECRET = os.getenv("WIZ_CLIENT_SECRET")



